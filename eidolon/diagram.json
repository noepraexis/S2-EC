    ["r2:2", "esp:D26", "green", ["v40", "h-150"]],
    ["r3:2", "esp:D27", "blue", ["v40", "h-170"]],
    
    ["lcd:VCC", "esp:3V3", "red", ["h20", "v-20", "h320"]],
