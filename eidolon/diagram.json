    ["ldr:VCC", "esp:3V3", "red", ["h0"]],
    ["ldr:GND", "esp:GND.1", "black", ["h20", "v80"]],
    ["ldr:AO", "esp:D34", "yellow", ["h40", "v100"]],
    ["ldr:AO", "r4:1", "yellow", []],
    ["r4:2", "esp:GND.1", "black", ["v80"]],
    
    ["mpu6050:VCC", "esp:3V3", "red", ["h-20", "v20", "h170"]],
